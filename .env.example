# =============================================================================
# ReelFlow - Environment Variables Template
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/reelflow
# For SQLite (development): DATABASE_URL=sqlite:///./reelflow.db

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# Frontend/Backend URLs
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Email (for password reset, notifications)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@reelflow.ai

# -----------------------------------------------------------------------------
# Google OAuth (for Google Sign-In)
# Get from: https://console.cloud.google.com/apis/credentials
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# GitHub OAuth (for GitHub Sign-In)
# Get from: https://github.com/settings/developers
# -----------------------------------------------------------------------------
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# -----------------------------------------------------------------------------
# YouTube API (for YouTube posting)
# Get from: https://console.cloud.google.com/apis/credentials
# Enable YouTube Data API v3
# -----------------------------------------------------------------------------
YOUTUBE_CLIENT_ID=your-youtube-client-id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# -----------------------------------------------------------------------------
# TikTok API (for TikTok posting)
# Get from: https://developers.tiktok.com/
# -----------------------------------------------------------------------------
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# -----------------------------------------------------------------------------
# Meta/Instagram API (for Instagram Reels posting)
# Get from: https://developers.facebook.com/
# Required: instagram_basic, instagram_content_publish, pages_show_list
# -----------------------------------------------------------------------------
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret

# -----------------------------------------------------------------------------
# Stripe (for payments)
# Get from: https://dashboard.stripe.com/apikeys
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Price IDs (create in Stripe Dashboard)
STRIPE_PRICE_LAUNCH=price_launch_id
STRIPE_PRICE_GROW=price_grow_id
STRIPE_PRICE_SCALE=price_scale_id

# -----------------------------------------------------------------------------
# AI APIs
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# AI Model Configuration (optional overrides)
OPENAI_MODEL=gpt-4o
IMAGE_MODEL=black-forest-labs/FLUX-1-schnell

# -----------------------------------------------------------------------------
# System Directories
# -----------------------------------------------------------------------------
OUTPUT_DIR=output
TEMP_DIR=temp
LOGS_DIR=logs

# -----------------------------------------------------------------------------
# TTS (Text-to-Speech) - Audixa
# -----------------------------------------------------------------------------
AUDIXA_API_KEY=your-audixa-api-key

# -----------------------------------------------------------------------------
# Caption/Transcription - Deepgram
# Get from: https://console.deepgram.com/
# -----------------------------------------------------------------------------
DEEPGRAM_API_KEY=your-deepgram-api-key

# -----------------------------------------------------------------------------
# Image Generation - DeepInfra (for AI image generation)
# Get from: https://deepinfra.com/dash/api_keys
# -----------------------------------------------------------------------------
DEEPINFRA_API_KEY=your-deepinfra-api-key

# -----------------------------------------------------------------------------
# Stock Videos - Pexels (optional, legacy)
# Get from: https://www.pexels.com/api/
# -----------------------------------------------------------------------------
PEXELS_API_KEY=your-pexels-api-key

# -----------------------------------------------------------------------------
# Other Image Generation APIs (optional)
# -----------------------------------------------------------------------------
REPLICATE_API_TOKEN=your-replicate-token
STABILITY_API_KEY=your-stability-key
